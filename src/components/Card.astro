---
export interface Props {
  title: string;
  href: string;
}

const { title, href } = Astro.props;
---

<a
  href={href}
  class="p-6 border rounded-xl shadow-sm hover:shadow transition hover:bg-gray-100 dark:hover:bg-gray-800"
>
  <h3 class="text-xl font-bold mb-2 text-green-700">{title}</h3>
  <p class="text-gray-600 dark:text-gray-400">
    <slot />
  </p>
</a>
