---
import BaseLayout from "../../layouts/BaseLayout.astro";

const title = "About – JLG Consulting";
const description =
  "Who is Jean-Louis Guénégo, IT consultant and trainer? Discover his journey, his skills, and his passion for coding.";
const publicDir = import.meta.env.BASE_URL;
---

<BaseLayout {title} {description}>
  <section class="py-16 px-4 bg-white">
    <div class="max-w-5xl mx-auto grid md:grid-cols-2 gap-8 items-center">
      <!-- Image -->
      <div class="flex justify-center">
        <img
          src={publicDir + "portrait.jpg"}
          alt="Jean-Louis Guénégo"
          class="w-64 h-64 object-cover rounded-full shadow-lg border-4 border-blue-100"
        />
      </div>

      <!-- Text -->
      <div>
        <h1 class="text-3xl font-bold text-blue-700 mb-4">About me</h1>
        <p class="text-gray-700 mb-4">
          My name is <strong>Jean-Louis Guénégo</strong>. I am an IT consultant
          and trainer, passionate about coding, software architecture,
          pedagogy, and knowledge transfer.
        </p>
        <p class="text-gray-700 mb-4">
          A former student of ENS Cachan, I have accumulated over 20 years
          of experience in web development, modern JavaScript technologies
          (Node.js, Vue, React, etc.), and training technical audiences.
        </p>
        <p class="text-gray-700 mb-4">
          My approach is centered on quality, simplicity, and
          efficiency. I always strive to provide understandable, scalable, and robust solutions to my clients.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>