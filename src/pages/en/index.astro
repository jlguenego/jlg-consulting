---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Testimonials from "../../components/Testimonials.astro";

const title = "Home – JLG Consulting";
const description =
  "Welcome to the website of Jean-Louis Guénégo, IT consultant and trainer. Discover his services.";

const publicDir = import.meta.env.BASE_URL;
---

<BaseLayout {title} {description}>
  <!-- HERO SECTION -->
  <section class="bg-white py-20 text-center">
    <div class="max-w-4xl mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Welcome to JLG Consulting
      </h1>
      <p class="text-lg text-gray-700 mb-8">
        Advice, expertise and support in software development and
        digital transformation.
      </p>
      <div class="flex justify-center gap-4 flex-col sm:flex-row">
        <a
          href="contact"
          class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded shadow transition"
        >
          Let's discuss your project
        </a>
        <a
          href="services"
          class="inline-block bg-white border border-blue-600 text-blue-600 hover:bg-blue-50 font-medium py-3 px-6 rounded transition"
        >
          Discover my services
        </a>
      </div>
    </div>
  </section>

  <!-- SERVICES PREVIEW -->
  <section class="py-12 px-4 bg-white">
    <div class="text-center mb-10">
      <h2 class="text-3xl font-semibold text-gray-800 mb-4">
        What I offer
      </h2>
      <p class="text-gray-600 max-w-xl mx-auto">
        From web application design to training on the latest
        JavaScript technologies, including advice on software
        architecture.
      </p>
    </div>
    <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      <div class="p-6 border rounded-xl shadow-sm hover:shadow transition">
        <h3 class="text-xl font-bold mb-2 text-blue-700">Development</h3>
        <p class="text-gray-600">
          Custom web applications in TypeScript, Node.js, Vue, or React.
        </p>
      </div>
      <div class="p-6 border rounded-xl shadow-sm hover:shadow transition">
        <h3 class="text-xl font-bold mb-2 text-blue-700">Training</h3>
        <p class="text-gray-600">
          Technical training tailored to fullstack developers and
          IT teams.
        </p>
      </div>
      <div class="p-6 border rounded-xl shadow-sm hover:shadow transition">
        <h3 class="text-xl font-bold mb-2 text-blue-700">Consulting</h3>
        <p class="text-gray-600">
          Audit, software architecture, technical support and best
          practices.
        </p>
      </div>
    </div>
  </section>

  <section id="about" class="py-16 px-4 bg-white">
    <div class="max-w-5xl mx-auto grid md:grid-cols-2 gap-8 items-center">
      <!-- Image -->
      <div class="flex justify-center">
        <img
          src={publicDir + "portrait.jpg"}
          alt="Jean-Louis Guénégo"
          class="w-64 h-64 object-cover rounded-full shadow-lg border-4 border-blue-100"
        />
      </div>

      <!-- Text -->
      <div>
        <h1 class="text-3xl font-bold text-blue-700 mb-4">About me</h1>
        <p class="text-gray-700 mb-4">
          My name is <strong>Jean-Louis Guénégo</strong>. I am an IT consultant
          trainer, passionate about code, software architecture,
          pedagogy and knowledge transfer.
        </p>
        <p class="text-gray-700 mb-4">
          A former student of the ENS de Cachan, I have accumulated more than 20 years
          of experience in web development, modern JavaScript
          technologies (Node.js, Vue, React, etc.), and training for
          technical audiences.
        </p>
        <p class="text-gray-700 mb-4">
          My approach is centered on quality, simplicity and
          efficiency. I always strive to bring understandable, scalable and robust solutions to my clients.
        </p>
      </div>
    </div>
  </section>

  <section id="missions" class="py-16 px-4 bg-white">
    <div class="max-w-5xl mx-auto grid md:grid-cols-2 gap-8 items-center">
      <!-- Text -->
      <div>
        <h1 class="text-3xl font-bold text-blue-700 mb-4">
          A story of {new Date().getFullYear() - 2001} years, with more than 400
          missions accomplished.
        </h1>
        <p class="text-gray-700 mb-4">
          Missions of a few days or several years, recommended by my
          partners, I have supported a hundred companies in various
          fields.
        </p>
        <p class="text-gray-700 mb-4">
          I have collaborated with companies of all sizes, from startups
          to large companies, including the public sector. Each
          mission is a new adventure, a new challenge to take up.
        </p>
      </div>

      <!-- Image -->
      <div class="flex justify-center">
        <a href="missions">
          <img
            src={publicDir + "missions.jpg"}
            alt="Map of France of my missions"
            class="w-64 h-64 object-cover rounded-full shadow-lg border-4 border-blue-100"
          />
        </a>
      </div>
    </div>
  </section>

  <Testimonials />

  <section id="contact" class="py-16 px-4 bg-white">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-3xl font-bold text-blue-700 mb-6">Contact me</h1>
      <p class="text-gray-700 text-lg mb-8">
        Here is all the information to reach me or come and meet me.
      </p>

      <div class="space-y-6 text-left text-gray-700 text-md">
        <!-- Address -->
        <div class="flex items-start gap-3">
          <svg
            class="w-6 h-6 text-blue-600 mt-1 shrink-0"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M12 11c1.656 0 3-1.343 3-3s-1.344-3-3-3-3 1.343-3 3 1.344 3 3 3z"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M19.5 11c0 7-7.5 11-7.5 11S4.5 18 4.5 11a7.5 7.5 0 0115 0z"
            ></path>
          </svg>
          <p>
            <strong>Address :</strong><br />
            99 rue de Paris<br />
            77200 Torcy<br />
            Building A, 1<sup>st</sup> floor
          </p>
        </div>

        <!-- Phone -->
        <div class="flex items-center gap-3">
          <svg
            class="w-6 h-6 text-blue-600 shrink-0"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M3 5a2 2 0 012-2h2.6a1 1 0 01.92.606L10 6l-2 2c1.5 3.5 4.5 6.5 8 8l2-2 2.394.479a1 1 0 01.606.921V19a2 2 0 01-2 2h-1C9.163 21 3 14.837 3 7V5z"
            ></path>
          </svg>
          <p>
            <strong>Phone :</strong><br />
            <a href="tel:+33160179262" class="text-blue-600 hover:underline"
              >+33 1 60 17 98 62</a
            >
          </p>
        </div>

        <!-- Email -->
        <div class="flex items-center gap-3">
          <svg
            class="w-6 h-6 text-blue-600 shrink-0"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8m-18 8h18a2 2 0 002-2V6a2 2 0 00-2-2H3a2 2 0 00-2 2v8a2 2 0 002 2z"
            ></path>
          </svg>
          <p>
            <strong>Email :</strong><br />
            <a
              href="mailto:jlg@jlg-consulting.com"
              class="text-blue-600 hover:underline">jlg@jlg-consulting.com</a
            >
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>