---
import ImageLoader from "../../components/ImageLoader";
import BaseLayout from "../../layouts/BaseLayout.astro";

const title = "Contact – JLG Consulting";
const description =
  "Contact Jean-Louis Guénégo, computer training consultant. Use his services.";

const publicDir = import.meta.env.BASE_URL;
---

<BaseLayout {title} {description}>
  <section class="py-16 px-4">
    <div class="max-w-5xl mx-auto text-center">
      <h1 class="font-heading text-3xl font-bold text-green-700 mb-6">
        Contact me
      </h1>
      <p class="text-gray-700 dark:text-gray-300 text-lg mb-8">
        Here are all the details to reach me or come and meet me.
      </p>

      <div class="flex flex-wrap justify-center gap-4 items-center">
        <div
          class="space-y-6 text-left text-gray-700 dark:text-gray-300 text-md"
        >
          <!-- Address -->
          <div class="flex items-start gap-3">
            <svg
              class="w-6 h-6 text-green-700 mt-1 shrink-0"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M12 11c1.656 0 3-1.343 3-3s-1.344-3-3-3-3 1.343-3 3 1.344 3 3 3z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M19.5 11c0 7-7.5 11-7.5 11S4.5 18 4.5 11a7.5 7.5 0 0115 0z"
              ></path>
            </svg>
            <p>
              <strong>Address :</strong><br />
              99 rue de Paris<br />
              Building A, 1<sup>st</sup> floor<br />
              77200 Torcy<br />
              France
            </p>
          </div>

          <!-- Phone -->
          <div class="flex items-center gap-3">
            <svg
              class="w-6 h-6 text-green-700 shrink-0"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3 5a2 2 0 012-2h2.6a1 1 0 01.92.606L10 6l-2 2c1.5 3.5 4.5 6.5 8 8l2-2 2.394.479a1 1 0 01.606.921V19a2 2 0 01-2 2h-1C9.163 21 3 14.837 3 7V5z"
              ></path>
            </svg>
            <p>
              <strong>Phone :</strong><br />
              <a href="tel:+33160179262" class="text-green-700 hover:underline"
                >+33 1 60 17 98 62</a
              >
            </p>
          </div>

          <!-- Email -->
          <div class="flex items-center gap-3">
            <svg
              class="w-6 h-6 text-green-700 shrink-0"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8m-18 8h18a2 2 0 002-2V6a2 2 0 00-2-2H3a2 2 0 00-2 2v8a2 2 0 002 2z"
              ></path>
            </svg>
            <p>
              <strong>Email :</strong><br />
              <a
                href="mailto:jlg@jlg-consulting.com"
                class="text-green-700 hover:underline">jlg@jlg-consulting.com</a
              >
            </p>
          </div>
        </div>

        <div class="text-center">
          <div
            class="h-60 w-80 md:h-80 md:w-120 mx-auto md:rounded-xl md:shadow-md overflow-hidden"
          >
            <ImageLoader
              client:load
              lowSrc={publicDir + "/low-res/bureau.webp"}
              src={publicDir + "/bureau.webp"}
              alt="Stylized photo of my office"
              className="h-60 w-80 md:h-80 md:w-120"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Google Maps Card -->
  <section class="dark:brightness-70">
    <div class="">
      <iframe
        title="Google Map - JLG Consulting"
        src="https://www.google.com/maps?q=99+rue+de+Paris,+77200+Torcy,+France&output=embed"
        width="100%"
        height="400"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        class="h-[80vh]"></iframe>
    </div>
  </section>
</BaseLayout>