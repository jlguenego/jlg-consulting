---
import ImageLoader from "../../components/ImageLoader";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getLogoList } from "../../lib/getLogoList";

const title = "References – JLG Consulting";
const description =
  "Discover the companies and organizations for which Jean-Louis Guénégo has worked as a consultant or trainer.";

const logoList = getLogoList();
const publicDir = import.meta.env.BASE_URL;
const logoPath = publicDir + "logos/";
---

<BaseLayout {title} {description}>
  <section class="py-16 px-4">
    <div class="max-w-6xl mx-auto text-center">
      <h1 class="font-heading text-3xl font-bold text-green-700 mb-6">
        They trusted me
      </h1>
      <p class="text-gray-700 dark:text-gray-300 mb-12 max-w-2xl mx-auto">
        Here are some companies and institutions for which I have carried out
        consulting, training, or development missions.
      </p>

      <div
        class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-1 items-center"
      >
        {
          logoList.map((logo) => (
            <ImageLoader
              client:load
              lowSrc={logoPath + logo.smallImg}
              src={logoPath + logo.img}
              alt={logo.img.replace(/\.(png|jpe?g|svg)/i, "")}
              className="w-30 mx-auto hover:scale-105 transition-transform duration-300"
            />
          ))
        }
      </div>
    </div>
  </section>
</BaseLayout>