---
import BaseLayout from "../../layouts/BaseLayout.astro";

const title = "References – JLG Consulting";
const description =
  "Discover the companies and organizations for which Jean-Louis Guénégo has intervened as a consultant or trainer.";
const publicDir = import.meta.env.BASE_URL;
---

<BaseLayout {title} {description}>
  <section class="py-16 px-4 bg-white">
    <div class="max-w-6xl mx-auto text-center">
      <h1 class="text-3xl font-bold text-green-700 mb-6">
        They trusted me
      </h1>
      <p class="text-gray-700 mb-12 max-w-2xl mx-auto">
        Here are some companies and institutions for which I have carried out
        consulting, training or development missions.
      </p>

      <div
        class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-8 items-center"
      >
        <img
          src={publicDir + "/capgemini.png"}
          alt="Company 1"
          class="h-16 mx-auto grayscale hover:grayscale-0 transition"
        />
        <img
          src={publicDir + "/capgemini.png"}
          alt="Company 2"
          class="h-16 mx-auto grayscale hover:grayscale-0 transition"
        />
        <img
          src={publicDir + "/capgemini.png"}
          alt="Company 3"
          class="h-16 mx-auto grayscale hover:grayscale-0 transition"
        />
        <img
          src={publicDir + "/capgemini.png"}
          alt="Company 4"
          class="h-16 mx-auto grayscale hover:grayscale-0 transition"
        />
        <img
          src={publicDir + "/capgemini.png"}
          alt="Company 5"
          class="h-16 mx-auto grayscale hover:grayscale-0 transition"
        />
        <img
          src={publicDir + "/capgemini.png"}
          alt="Company 6"
          class="h-16 mx-auto grayscale hover:grayscale-0 transition"
        />
        <img
          src={publicDir + "/capgemini.png"}
          alt="Company 7"
          class="h-16 mx-auto grayscale hover:grayscale-0 transition"
        />
        <img
          src={publicDir + "/capgemini.png"}
          alt="Company 8"
          class="h-16 mx-auto grayscale hover:grayscale-0 transition"
        />
      </div>
    </div>
  </section>
</BaseLayout>