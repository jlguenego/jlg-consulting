<script>
  import { getLocaleFromCache } from "../utils/i18n";

  const baseHref = import.meta.env.BASE_URL || "/"; // Base URL de l'application
  const locale = getLocaleFromCache() || "fr"; // Locale par défaut

  document.documentElement.lang = locale; // Définir la langue du document

  // Redirection basée sur la locale
  if (locale === "fr") {
    window.location.href = `${baseHref}fr/`;
  } else if (locale === "en") {
    window.location.href = `${baseHref}en/`;
    // ou autre redirection
  } else {
    window.location.href = `${baseHref}fr/`; // redirection par défaut
  }
</script>
