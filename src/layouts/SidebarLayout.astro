---
import Footer from "../components/Footer.astro";
import HtmlHead from "../components/HtmlHead.astro";
import NavBar from "../components/NavBar.astro";
import "../styles/global.css";
import type { MenuItem } from "../types/menu";
import { getLocaleFromPathname } from "../utils/i18n";

interface Props {
  title: string;
  menuItems: MenuItem[];
  children: unknown;
  description: string;
}

const pathname = Astro.url.pathname;
const locale = getLocaleFromPathname(pathname);

const { menuItems = [] } = Astro.props as Props;
---

<html lang="fr">
  <HtmlHead />
  <body class="flex flex-col min-h-screen bg-white text-gray-800">
    <NavBar locale={locale} />
    <div class="flex-grow container mx-auto p-4">
      <!-- Barre latÃ©rale -->
      <aside class="w-64 bg-white shadow-md p-4 hidden md:block">
        <h2 class="text-xl font-semibold mb-4">
          <a href="prestations" class="text-green-700 hover:underline"
            >Mes Prestations</a
          >
        </h2>
        <ul class="space-y-2">
          {
            menuItems.map((item) => (
              <li>
                <a href={item.href} class="text-green-700 hover:underline">
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>
      </aside>

      <!-- Contenu principal -->
      <main class="flex-1 p-6">
        <slot />
      </main>
    </div>
    <Footer locale={locale} />
  </body>
</html>
